	article
		display: flex
		min-height: 100vh
		flex-flow: row wrap
		> section
			flex: 1 1 100%
		#banner
			position: relative
			display: flex
			height: calc(100vh - 5rem)
			justify-content: center
			&-image
				position: absolute
				left: 0
				top: 0
				width: 100%
				height: 100%
				background-position: center
				background-repeat: no-repeat
				background-size: cover
				z-index: -1
			&-info
				position: absolute
				bottom: 10%
			&-title
				margin-bottom: 2rem
				padding: 1rem
				text-align: center
				font-size: 4rem
				$DefaultFW()
				color: #fff
				text-transform: uppercase
				line-height: 1
				text-shadow: 0 0 50px #000, 0 0 50px #000
			&-button
				display: flex
				$AlignContent(center)
				margin: auto
				padding: .5rem 1rem
				background-color: #fff
				cursor: pointer
				.icon
					$Transition(all $OutCubic 150ms)
				&:hover .icon
					margin-left: 1rem
		#magazin
			display: flex
			padding: 1rem
			$AlignContent(center)
			background-color: $primary
			cursor: pointer
			> *
				color: #fff
		#product-slider
			align-items: baseline
			.product
				display: flex
				padding: 4rem
				flex-flow: row wrap
				justify-content: center
				text-align: center
				flex: 0 1 calc(100% / 5)
				cursor: pointer
				.image
					width: 100%
					height: 100%
					flex: 1 1 @width
					z-index: -1
				.name, .old-price, .new-price
					opacity: .3
				.name
					flex: 1 1 100%
				.old-price
					margin-right: 1rem
					text-decoration: line-through
				.new-price
					color: #ff0050
				&:hover
					transform: scale(1.1)
					.name, .old-price, .new-price
						opacity: 1
		#testo
			max-width: 75%
			margin: auto
			> *
				position: relative
				margin: 4rem
				justify-content: center
				text-align: center
				overflow: hidden
				cursor: pointer
				&.single
					flex: 1 1 100%
				&.half
					flex: 0 1 calc(50% - 4rem * 2)
				&.third
					flex: 0 1 calc(100% / 3 - 4rem * 2)
				img, video
					width: 100%
					$Transition(all $OutCubic 300ms)
					transform: scale(1)
				.label
					position: absolute
					left: 0
					bottom: 0
					display: flex
					width: 100%
					height: 2.5rem
					background-color: rgba($primary, 0.9)
					$AlignContent(center)
					color: #fff
					$Transition(all $OutCubic 300ms)
					.icon, span
						color: #fff
						$Transition(all $OutCubic 300ms)
				&:hover
					box-shadow: 0 0 0 .5rem rgba($primary, .1)
					img, video
						transform: scale(1.05)
					.label
						height: 100%
						.icon
							margin-left: .5rem
		#reasons
			max-width: 75%
			margin: auto
			padding: 8rem 0
			align-items: baseline
			.container
				padding: 0 2rem
				flex: 1 1 (100% / 4)
				justify-content: center
				img
					margin-bottom: 2rem
				h5, p
					flex: 1 1 100%
		#about-textures
			display: flex
			padding: 8rem 2rem
			flex-flow: row nowrap
			> *
				margin: 0 4rem
				flex: 1 1 calc(00% / 6)
				transform: scale(1)
				cursor: pointer
				img
					width: 100%
				.name
					display: block
					margin-top: 1rem
					text-align: center
				&:hover
					transform: scale(1.1)
				

	footer
		display: flex
		width: 100%
		margin-top: auto
		flex-flow: row wrap
		align-content: flex-start
		align-items: stretch
		background-color: rgba(#000, .05)
		> *
			padding: 2rem
			flex: 1 1 (100% / 5)
			&:last-child
				margin: 0
			.title
				margin-bottom: .5rem
		#pay-methods, #contact, #service,
		#about-vivobarefoot, #newsletter
			display: flex
			flex-flow: row wrap
			align-content: flex-start
			align-items: flex-start
			> *
				flex: 1 1 100%
		.header
			display: flex
			padding: 4rem
			flex-flow: row wrap
			flex: 1 1 100%
			justify-content: center
			#logo
				height: 4rem
				.logo-fill
					fill: $primary
			#social
				display: flex
				margin-top: .5rem
				flex-flow: row nowrap
				flex: 1 1 100%
				justify-content: center
				> *
					width: 2rem
					height: 2rem
					margin: 0 .25rem
					background-position: center
					background-repeat: no-repeat
					background-size: contain
					cursor: pointer
					transform: scale(1)
					transition-duration: 300ms
					&:hover
						transform: scale(1.5)
						margin: 0 1rem
		#pay-methods
			justify-content: center
			> .title
				text-align: center
			> .method
				display: flex
				height: 3rem
				margin: .5rem
				padding: 1rem
				flex: 1 1 auto
				$AlignContent(center)
				$BorderRadius()
				$Transition(all $OutCubic 200ms)
				cursor: pointer
				img
					height: 100%
				&:hover
					background-color: rgba(#000, .1)
		#contact a
			color: $primary
		#service, #about-vivobarefoot
			a
				position: relative
				display: flex
				align-items: center
				text-decoration: none
				color: $primary
				&:before
					content: ''
					position: relative
					width: 0rem
					height: .1rem
					background-color: $primary
				&:hover
					&:before
						width: .5rem
						margin-right: .5rem
		#newsletter
			> .input-container
				display: flex
				margin-top: 1rem
				flex-flow: row nowrap
			> *
				flex: 1 1 auto
			input
				margin: 1rem 0
				padding: .5rem
				$BorderRadius()
				background-color: rgba(#000, .05)
				$Transition(all $OutCubic 200ms)
				&:hover
					box-shadow: 0 0 0 1px rgba(#000, .2)
				&:focus
					box-shadow:
						0 0 0 1px $primary,
						0 0 0 .4rem rgba($primary, .2)
			button
				display: flex
				padding: .5rem 1rem
				cursor: pointer
				$BorderRadius()
				background-color: rgba($primary, .1)
				&:hover
					background-color: $primary
					color: #fff
				&:active, &:focus
					background-color: $primary
					box-shadow: 0 0 0 .4rem rgba($primary, .2)
					color: #fff
		#more-info
			display: flex
			flex-flow: row wrap
			flex: 1 1 100%
			> *
				flex: 1 1 auto
			#certificate-badge
				margin-right: 2rem
				flex: 0 0 auto
				img
					height: 5rem
			.texts
				> *
					display: flex
					flex: 1 1 100%
				.flag
					font-size: $SmallFS4
					$BoldFW()
				span
					font-size: $SmallFS2
		.footer
			flex: 1 1 100%
			justify-content: space-between
			.links > *
				margin-left: 1rem
				color: $primary
				&:first-child
					margin: 0
			#copyright
				text-align: center
				font-size: $SmallFS2
				$BoldFW()

	.dropdown
		position: absolute
		display: flex
		padding: 1rem
		$BorderRadius()
		background-color: #fff
		box-shadow: 0 0 10px rgba(#000, .2)
